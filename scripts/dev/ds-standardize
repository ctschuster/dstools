#!/usr/bin/env perl
########################################################################
# ds-standardize
########################################################################
# Usage:
#     ds-standardize <file> [...]
########################################################################


use strict;
use warnings;

use Data::Dumper;
use File::Basename;
use FindBin;


use lib "$FindBin::Bin/lib";

use DS;


########################################################################
foreach my $file (@ARGV) {
    standardize_filename($file)
}

########################################################################
0;
